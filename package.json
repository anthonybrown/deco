{
  "name": "deco",
  "version": "0.12.3",
  "description": "Compose modular decorators to build constructors.  Your Node.js code will never have been as organized, reusable, and pluggable.",
  "main": "index.js",
  "engines" : {
    "node": "^6.3.1",
    "npm" : "^3.10.3"
  },
  "scripts": {
    "documentation": "docco *.js",
    "lint": "eslint --fix .",
    "test": "npm-run-all test:*",
    "test:code": "lab --coverage --threshold 100",
    "test:lint": "eslint .",
    "test:markdown": "remark ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wprl/deco.git"
  },
  "keywords": [
    "decorator",
    "decorate",
    "pattern",
    "mixin",
    "organize",
    "partials",
    "partial classes"
  ],
  "author": "William Riley-Land",
  "license": "MIT",
  "dependencies": {
    "@kunio/d": "^1.1.0",
    "bursary": "^3.0.0",
    "caller-path": "^0.1.0"
  },
  "devDependencies": {
    "@kunio/eslint-plugin-style": "^2.0.0",
    "@kunio/test-markdown": "^1.0.1",
    "code": "^3.0.1",
    "docco": "^0.7.0",
    "eslint": "^3.0.1",
    "lab": "^10.8.2",
    "npm-run-all": "^2.3.0",
    "remark-cli": "^1.0.0",
    "remark-lint": "^4.0.2"
  },
  "eslintConfig": {
    "plugins": [
      "@kunio/style"
    ],
    "extends": "plugin:@kunio/style/guide"
  },
  "remarkConfig": {
    "output": true,
    "plugins": {
      "lint": {
        "maximum-line-length": false
      }
    }
  }
}
